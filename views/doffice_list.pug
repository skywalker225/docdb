extends layout

block content
    include index.pug
    .container
        .row
            h2= sub_title
            a(href='/doffice_add') เพิ่ม
        .row
            if (doffice_list.length)
                table(style='width:50%', border='1')
                    thead
                        tr
                            td ลำดับ
                            td ชื่อที่ว่าการฯ
                            //- td แก้ไข
                            td Action
                    each doffice, index in doffice_list
                        tbody
                            tr
                                td #{index + 1}
                                td= doffice.name
                                //- td= แก้ไข
                                td
                                    a(href='/doffice_del/' + doffice._id) ลบ
            else
                p 'ไม่มีรายชื่อของชื่อที่ว่าการฯ.'