extends layout

block content
    include index.pug
    .container
        .row
            .form-containter
                form(method="POST" action="/locals/add")
                    h2 เพิ่มหน่วยงานนอก

                    .form-group
                        label(for="name" class="sr-only") ชื่อหน่วยงาน
                        input(type="text" name="name" id="name" class="form-control" placeholder="ชื่อหน่วยงานภายใน" required)

                    .form-group
                        label(for="location" class="sr-only") ชื่อหน่วยงาน
                        input(type="text" name="location" id="location" class="form-control" placeholder="ที่อยู่" required)

                    button(class="btn btn-primary btn-block" type="submit") เพิ่ม

                    if message
                        .aleart.alert-danger #{message}