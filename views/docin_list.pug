extends layout

block content
    include index.pug
    .container
        .row
            h2= sub_title
            a(href='/docin_add') เพิ่ม
        .row
            table(style='width:100%', border='1')
                thead
                    tr
                        td เรื่อง
                        td จาก
                        td ถึง
                        td ระดับความเร่งด่วน
                        td ระดับความลับ
                        td ผู้ปฏิบัติ
                        td ผู้รับ
                each docin in docin_list
                    tbody
                        tr
                            td= docin.doc_title
                            td= docin.doc_from
                            td= docin.doc_to
                            td= docin.doc_urgency
                            td= docin.doc_level
                            td= docin.responsible
                            td= docin.record_holder
                else
                    p 'ไม่มีรายการหนังสือรับ.'

